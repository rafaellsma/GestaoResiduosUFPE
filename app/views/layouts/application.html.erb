<!DOCTYPE html>
<html>
  <head>
    <title>GestaoResiduosUFPE</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="main-body">
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapsed" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class:'navbar-brand' do %>
            <%= image_tag('brand', class: 'brand-nav') %>
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapsed">
          <!-- Parte da Esquerda -->
          <ul class="nav navbar-nav">
            <li> <%= link_to 'Sistema de Gerenciamento de Resíduos', root_path %> </li>
          </ul>
          <!-- Parte da direita -->
          <ul class="nav navbar-nav navbar-right">
            <% if current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Gerenciar <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li> <%= link_to 'Centros', centers_url %> </li>
                  <li> <%= link_to 'Departamentos', departments_url %> </li>
                  <li> <%= link_to 'Laboratórios', laboratories_url %> </li>
                  <li> <%= link_to 'Usuários', list_url %> </li>
                </ul>
              </li>
            <% end %>
            <li> <%= link_to 'Sair', destroy_user_session_url %> </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="alert alert-warning" role="alert" style="display: <%= notice ? 'block' : 'none' %>">
      <%= notice %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
