<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Center</th>
      <th>Chief</th>
      <th>Email</th>
      <th>Phone ext</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.center %></td>
        <td><%= department.chief %></td>
        <td><%= department.email %></td>
        <td><%= department.phone_ext %></td>
        <td><%= link_to 'Show', department, :class => "btn btn-default btn-lg" %></td>
        <td><%= link_to 'Edit', edit_department_path(department), :class => "btn btn-default btn-lg" %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path, :class => "btn btn-default btn-lg" %>
