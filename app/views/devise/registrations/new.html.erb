<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"Nome" %>
  </div>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :password %>

    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Senha" %>
    <% if @minimum_password_length %>
        <em>(No m√≠nimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
  </div>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confirme a senha" %>
  </div>
  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :phone_ext %><br />
    <%= f.number_field :phone_ext, class:"form-control", placeholder:"Ramal" %>
  </div>
  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= select_tag "center", options_for_select(@centers.collect { |center|
    [center.name, center.id] }, 1), id: 'centers_select' %>
    <%= select_tag "departments", options_for_select(@departments.collect { |department|
    [department.name, department.id] }, 1), id: 'departments_select' %>
    <%= f.select :laboratory_id, options_for_select(@laboratories.collect { |laboratory|
    [laboratory.name, laboratory.id] }, 0), {}, {id: 'laboratories_select'} %>
  </div>
  <div class="btn-default btn-lg">
    <%= f.submit "Sign up"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
