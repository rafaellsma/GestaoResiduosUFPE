<%= form_for(sediment) do |f| %>
  <% if sediment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sediment.errors.count, "error") %> prohibited this sediment from being saved:</h2>

      <ul>
      <% sediment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :composition %>
    <%= f.text_field :composition %>
  </div>

  <div class="field">
    <%= f.label :res_type %>
    <%= f.select :res_type, options_for_select(["Sólido Orgânico",
                                               "Sólido Inorgânico", "Líquido Inorgânico",
                                               "Líquido Inflamável", "Líquido Orgânico",
                                               "Outros (risco ao meio ambiente)"]
    ), prompt: 'Selecione um Tipo' %>
  </div>

  <div class="field">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <%= f.label :volume %>
    <%= f.text_field :volume %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
